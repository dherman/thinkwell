{
  "name": "@thinkwell/build-schema-providers",
  "version": "0.1.0",
  "description": "Build tool for generating SchemaProvider modules from TypeScript types marked with @JSONSchema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "build-schema-providers": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "json-schema",
    "schema-provider",
    "code-generation",
    "build-tool"
  ],
  "author": "David Herman",
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.0",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.4"
  },
  "peerDependencies": {
    "@thinkwell/acp": "workspace:*"
  }
}
